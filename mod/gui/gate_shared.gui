    }

    type gate_mana_density = widget {
        block "size" {
            size = { 100% 100% }
        }

        block "visibility" {}

        textbox = {
            using = frame_small
            size = { 100% 100% }
            text = gg_map_marker_mana_density
            align = center
            default_format = "#header"
